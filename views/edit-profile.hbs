<form action="/edit-profile" method="post">

  <div class="form-row d-flex justify-content-center">
    <div class="col-md-4 mb-3">
      <label for="aboutMe" class="pt-3">about Me</label>
      <textarea name="aboutMe" id="" cols="30" rows="10" class="form-control"></textarea>
    </div>
  </div>
  <div class="form-row d-flex justify-content-center">
    <div class="col-md-4 mb-3">
      <label for="email">Email</label>
      <input type="email" name="email" value="{{user.email}}" class="form-control">
    </div>
  </div>
  <div class="d-flex justify-content-center">
    <div>
      <button type="submit" class="btn btn-primary">update profile</button>
    </div>
  </div>

</form>

<form action="/uploadAvatarImg/{{user._id}}" method="post" enctype="multipart/form-data">
  <div class="d-flex justify-content-center pt-4">
    <div><input type="file" name="photo" class="photo-input mr-2"></div>
    <div><input type="submit" value="SAVE" class="btn btn-primary ml-2"></div>
  </div>
</form>