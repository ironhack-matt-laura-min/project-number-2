<div class="d-flex justify-content-center">
  <img src="../images/logo2.png" />
</div>
<div class="d-flex justify-content-center" id="login">
  <form action="/auth/login" method="POST" id="form-container">
    <div class="d-flex justify-content-center codestory">
      {{!-- <h1>Code Story</h1> --}}
    </div>

    <div class="form-group">
      <input type="text" class="form-control" id="inputEmail4" placeholder="Username" name="username">
    </div>

    <div class="form-group">
      <input type="password" class="form-control" id="inputPassword4" placeholder="Password" name="password">
    </div>
    <div class="checkbox mb-2 d-flex justify-content-center">
      {{!-- <label><input type="checkbox" value="remember-me"> Remember me</label> --}}
    </div>
    <div class="d-flex justify-content-center">
      <button type="submit" id="loginButton" class="btn-block btn-lg btn-color">Continue</button>
    </div>
    <br>
    <p class="account-message">
      Don't have an account?
      <a href="/auth/signup" class="pink">Signup</a>
    </p>
    {{#if message }}
    <div class="error-message">{{ message }}</div>
    {{/if}}
  </form>
</div>