<div class="d-flex align-items-center justify-content-center" id="signup">
  <div>
    <form action="/auth/signup" method="POST" id="form-container">
      <h1>Sign Up</h1>
      <div class="form-group">
        <input type="text" class="form-control" id="inputEmail4" placeholder="Username" name="username">
      </div>


      <div class="form-group">
        <input type="password" class="form-control" id="inputPassword4" placeholder="Password" name="password">
      </div>
      <button type="submit" class="btn btn-primary p">Sign up</button>
      <br></br>
      {{#if message }}
      <div class="error-message">{{ message }}</div>
      {{/if}}
    </form>
  </div>

</div>